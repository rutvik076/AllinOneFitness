@model IEnumerable<UserViewModel>

@{
    ViewData["Title"] = "Users";

}
<style>
.edit-btn:hover {
    background-color: #007bff;
    color: #fff;
}

.delete-btn:hover {
    background-color: #dc3545;
    color: #fff;
}

    .alert {
    margin-top: 20px;
}

.alert-success {
    background-color: #d4edda;
    color: #155724;
    border-color: #c3e6cb;
}

</style>


<h1>Users</h1>

@if (TempData["Message"] != null)
{
    <div class="alert alert-success" role="alert">
        @TempData["Message"]
    </div>
}


<link href="https://cdn.datatables.net/1.13.2/css/jquery.dataTables.min.css" rel="stylesheet"/>


<table class="display" id="dynamic">

    <thead>
        <tr class="bg-primary text-white">
    <th>Name</th>
    <th>Gender</th>
    <th>Age</th>
    <th>Weight</th>
    <th>Height</th>
    <th>Target Weight</th>
    <th>Email</th>
@*<th>Role</th>    *@
    <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr> 
              
                <td>@user.Name</td>
                <td>@user.Gender</td>
                <td>@user.Age</td>
                <td>@user.Weight</td>
                <td>@user.Height</td>
                <td>@user.TargetWeight</td>
                <td>@user.Email</td>
             @*   <td>@string.Join(",", user.Roles.ToList())</td>*@
                <td>
                    <a class="btn btn-primary edit-btn" href="@Url.Action("Edit", new { id = user.Id })">
                        <i class="fa fa-pencil"></i> Edit
                    </a>
                    <a class="btn btn-primary btn-danger" href="@Url.Action("Delete", new { id = user.Id })">
                        <i class="fa fa-pencil"></i> Delete
                    </a>
                </td>


            </tr>
        }
    </tbody>
</table>


<script src="https://cdn.datatables.net/1.13.2/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/1.13.2/js/dataTables.bootstrap4.min.js"></script>

<script>
    $(function () {
        $('#dynamic').on('click', '.delete-btn', function () {
            var id = $(this).data('id');
            if (confirm('Are you sure you want to delete this user?')) {
                $.ajax({
                    url: '@Url.Action("Delete", "Users")/' + id,
                    type: 'POST',
                    success: function () {
                        window.location.reload();
                    },
                    error: function () {
                        alert('An error occurred while deleting the user.');
                    }
                });
            }
        });
    });
</script>

