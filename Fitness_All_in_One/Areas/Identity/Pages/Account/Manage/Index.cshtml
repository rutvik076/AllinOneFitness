@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<h3>@ViewData["Title"]</h3>
<partial name="_StatusMessage" for="StatusMessage" />
<div class="row">
    <div class="col-md-6">
        <form id="profile-form" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating mb-3">
                <input asp-for="Username" class="form-control" placeholder="Please choose your username." disabled />
                <label asp-for="Username" class="form-label"></label>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.Name" class="form-control" placeholder="Please choose your Name." />
                <label asp-for="Input.Name" class="form-label"></label>
            </div>
            <div class="form-floating mb-3">
                <p>Enter your Gender?</p>
                <input asp-for="Input.Gender" type="radio" value="female" autocomplete="Gender" aria-required="true" placeholder="Gender" /> Female
                <input asp-for="Input.Gender" type="radio" value="male" autocomplete="Gender" aria-required="true" placeholder="Gender" /> Male
                <br />
                <span asp-validation-for="Input.Gender" class="text-danger"></span>
            </div>
            <br />
            <div class="form-floating mb-3">
                <input asp-for="Input.Age" class="form-control" min="12" max="50" placeholder="Please choose your Age." />
                <label asp-for="Input.Age" class="form-label"></label>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.Weight" class="form-control" min="30" max="120" placeholder="Please choose your Weight." />
                <label asp-for="Input.Weight" class="form-label">Weight in Kg</label>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.Height" class="form-control" min="137" max="200" placeholder="Please choose your Height." />
                <label asp-for="Input.Height" class="form-label">Height in cm</label>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.TargetWeight" class="form-control" min="30" max="120" placeholder="Please choose your TargetWeight." />
                <label asp-for="Input.TargetWeight" class="form-label">TargetWeight in Kg</label>

            </div>
           
            <div class="form-floating mb-3">
                <input asp-for="Input.PhoneNumber" class="form-control" placeholder="Please enter your phone number." />
                <label asp-for="Input.PhoneNumber" class="form-label"></label>
                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
            </div>

            <button id="update-profile-button" type="submit" class="w-100 btn btn-lg btn-primary">Save</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
